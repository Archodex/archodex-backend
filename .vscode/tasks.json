{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "rust: cargo build"
    },
    {
      "type": "shell",
      "command": "surreal sql --endpoint rocksdb://db --namespace archodex --pretty --multi",
      "problemMatcher": [],
      "label": "surreal: SQL CLI to self-hosted database at ./db"
    },
    {
      "type": "shell",
      "command": "act --platform ubuntu-latest=catthehacker/ubuntu:act-24.04 --platform linux/amd64 --artifact-server-path /tmp/act-artifacts --workflows .github/workflows/build-dev.yml --use-new-action-cache --reuse",
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "label": "act: Run GitHub Actions Workflow build-dev.yml to build arm container image"
    }
  ]
}
