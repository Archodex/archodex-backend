{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "rust: cargo build"
    },
    {
      "type": "shell",
      "command": "act --platform ubuntu-latest=catthehacker/ubuntu:act-24.04 --bind --artifact-server-path /tmp/act-artifacts --workflows .github/workflows/build-dev.yml --matrix arch:aarch64 --job build",
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": [
            "-c"
          ]
        }
      },
      "problemMatcher": [],
      "group": {
        "kind": "build"
      },
      "label": "act: Run GitHub Actions Workflow build-dev.yml to build arm container image"
    }
  ]
}