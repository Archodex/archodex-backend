{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug self-hosted backend server",
      "cargo": {
        "args": [
          "build",
          "--bin=server",
          "--package=server"
        ],
        "filter": {
          "name": "server",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "COLORTERM": "truecolor",
        "RUST_BACKTRACE": "1"
      },
      // Additional environment variables may be defined here, see template file
      "envFile": "${workspaceFolder}/.vscode/.env.self-hosted",
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug archodex.com managed backend server",
      "cargo": {
        "args": [
          "build",
          "--bin=server",
          "--package=server",
          "--no-default-features",
          "--features=archodex-com",
          "${config:archodex.ARCHODEX_COM_ADDITIONAL_BUILD_FLAG}"
        ],
        "filter": {
          "name": "server",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "COLORTERM": "truecolor",
        "RUST_BACKTRACE": "1"
      },
      // Additional environment variables must be defined here, see template file
      "envFile": "${workspaceFolder}/.vscode/.env.archodex-com",
    }
  ]
}